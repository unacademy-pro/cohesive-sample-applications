pid /tmp/nginx.pid;

worker_processes 4;
worker_rlimit_nofile 1047552;
worker_shutdown_timeout 240s ;

events {
        multi_accept        on;
        worker_connections  16384;
        use                 epoll;
}

http {
    map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
    }

    proxy_redirect          off;
    proxy_set_header        X-Real-IP       $remote_addr;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    client_max_body_size    10m;
    client_body_buffer_size 128k;
    proxy_connect_timeout   90;
    proxy_send_timeout      90;
    proxy_read_timeout      90;
    proxy_buffers           32 4k;
    resolver                172.27.0.10 valid=30s ipv6=off;
    keepalive_timeout       60;

    default_type application/octet-stream;
    log_format   main '$remote_addr - $remote_user [$time_local]  $status '
        '"$request" $body_bytes_sent "$http_referer" '
        '"$http_user_agent" [$http_connection] [$http_upgrade] "$http_x_forwarded_for"';
    access_log   /dev/stdout  main;
    sendfile     on;
    tcp_nopush   on;
    server_names_hash_bucket_size 128; # this seems to be required for some vhosts

    server {
        listen 80;
        listen [::]:80;
        server_name dev-frontend.relevel.com;
        underscores_in_headers on;
        set $jobs_server {{.JobsServer}};
        set $cms_server {{.CMSServer}};

      location = / {
        if ($cookie_isSlotBooked = "true") {
            rewrite ^/$ $scheme://$host/dashboard/home;
        }
        proxy_pass https://$cms_server;
      }

      location = /partnerships {
        proxy_pass https://$cms_server;
      }

      location = /select-category {
        proxy_pass https://$cms_server;
      }

      location = /test {
        proxy_pass https://$jobs_server;
      }

      location = /courses {
        proxy_pass https://$cms_server;
      }

      location = /404 {
        proxy_pass https://$cms_server;
      }

      location = /500 {
        proxy_pass https://$cms_server;
      }

	  location = /privacy-policy {
		proxy_pass https://$cms_server;
      }

      location = /terms-and-conditions {
        proxy_pass https://$cms_server;
      }

      location = /company {
        proxy_pass https://$cms_server;
      }

      location = /robots.txt {
        proxy_pass https://$cms_server;
      }

      location = /sw.js {
        proxy_pass https://$cms_server;
      }

      location = /sw.js.map {
        proxy_pass https://$cms_server;
      }

      location = /manifest.json {
        proxy_pass https://$cms_server;
      }

      location = /favicon.svg {
        proxy_pass https://$cms_server;
      }

      location ~^/lottie {
        proxy_pass https://$cms_server;
      }

      location ~^/icons {
        proxy_pass https://$cms_server;
      }

      location ~^/images {
        proxy_pass https://$cms_server;
      }

      location ~* /workbox-.*.js {
        proxy_pass https://$cms_server;
      }

      location ~^/profile/u {
            proxy_pass https://$cms_server;
      }

      location ~*(.*)/booking$ {
        proxy_pass https://$cms_server;
      }

      location ~* (/_next/data/cms-build-*/?.*)$  {
            proxy_pass https://$cms_server;
      }

      location ~* (?<begin>.*courses)/(?<end>.*)$ {
		proxy_pass https://$cms_server;
	  }

	location ~* (/dashboard/test/?.*)$ {
		proxy_pass https://$jobs_server;
	}

	location ~* (?<begin>.*test)/(.*)/(?<end>.*)$ {
		proxy_pass https://$jobs_server;
	}

  location ~* (?<begin>.*test)/(?<end>.*)$ {
		proxy_pass https://$cms_server;
  }

	location ~* (?<begin>.*/jobs)/(?<end>.*)$ {
		proxy_pass   https://$jobs_server/$end;
	}

	location /cms-next-images/ {
		proxy_pass   https://$cms_server/;
	}

	location ~* (/company/(.*)/(.*)/?.*)$ {
		proxy_pass https://$cms_server;
	}

	location ~ \.(xml)$ {
		proxy_pass https://$cms_server;
	}

	location / {
		proxy_pass https://$jobs_server;
	}

  }
}